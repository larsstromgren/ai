        // F√§rgskala baserad p√• befolkning
        function getColor(population) {
            if (population > 150000) return '#a50f15';
            if (population > 120000) return '#de2d26';
            if (population > 80000) return '#fb6a4a';
            if (population > 50000) return '#fcae91';
            return '#fee5d9';
        }

        // Skapa karta
        const container = document.getElementById('map-container');
        const width = container.clientWidth;
        const height = container.clientHeight;
        
        const svg = d3.select('#map')
            .attr('width', width)
            .attr('height', height);

        const projection = d3.geoMercator()
            .center([18.0686, 59.3293])
            .scale(80000)
            .translate([width / 2, height / 2]);

        const path = d3.geoPath().projection(projection);

        const tooltip = d3.select('.tooltip');

        // Ta bort laddningsmeddelande
        d3.select('.loading').remove();

        // Rita stadsdelsomr√•den
        svg.selectAll('.district')
            .data(geojson.features)
            .enter()
            .append('path')
            .attr('class', 'district')
            .attr('d', path)
            .attr('fill', d => {
                const pop = populationData[d.properties.name] || 0;
                return getColor(pop);
            })
            .on('mouseover', function(event, d) {
                const pop = populationData[d.properties.name] || 0;
                tooltip.html(`
                    <div class="tooltip-title">${d.properties.name}</div>
                    <div class="tooltip-pop">${pop.toLocaleString('sv-SE')} inv√•nare</div>
                `)
                .style('left', (event.pageX + 15) + 'px')
                .style('top', (event.pageY - 15) + 'px')
                .classed('visible', true);
            })
            .on('mousemove', function(event) {
                tooltip
                    .style('left', (event.pageX + 15) + 'px')
                    .style('top', (event.pageY - 15) + 'px');
            })
            .on('mouseout', function() {
                tooltip.classed('visible', false);
            });

        // L√§gg till etiketter
        svg.selectAll('.district-label')
            .data(geojson.features)
            .enter()
            .append('text')
            .attr('class', 'district-label')
            .attr('transform', d => {
                const centroid = path.centroid(d);
                return `translate(${centroid[0]}, ${centroid[1]})`;
            })
            .text(d => {
                const name = d.properties.name;
                // F√∂rkorta l√•nga namn
                if (name === 'Enskede-√Örsta-Vant√∂r') return 'Enskede-√Örsta-V.';
                if (name === 'H√§gersten-√Ñlvsj√∂') return 'H√§gersten-√Ñlvsj√∂';
                if (name === 'H√§sselby-V√§llingby') return 'H√§sselby-V√§ll.';
                if (name === 'Norra innerstaden') return 'Norra innerst.';
                return name;
            });

        // Responsiv resize
        window.addEventListener('resize', () => {
            const newWidth = container.clientWidth;
            const newHeight = container.clientHeight;
            
            svg.attr('width', newWidth).attr('height', newHeight);
            
            projection
                .scale(newWidth / width * 80000)
                .translate([newWidth / 2, newHeight / 2]);
            
            svg.selectAll('.district').attr('d', path);
            svg.selectAll('.district-label')
                .attr('transform', d => {
                    const centroid = path.centroid(d);
                    return `translate(${centroid[0]}, ${centroid[1]})`;
                });
        });
